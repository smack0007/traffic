{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "type": "process",
      "command": "./build.sh",
      "args": [""],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Serve",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "type": "process",
      "command": "./serve.sh",
      "args": [""],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$go"]
    }
  ]
}